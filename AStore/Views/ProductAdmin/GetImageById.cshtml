@model List<AStore_Web.Models.Product_image>

<section class="section">
	<div class="section-header">
		<h1>Product Image</h1>
	</div>
	<div class="section-body">
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<h4>All Products</h4>
						<div class="card-header-action">
							<a href="@Url.Action("Create", "Product_imageAdmin")" class="btn btn-primary"><i class="fas fa-plus"></i> Create New</a>
						</div>
					</div>
					<div class="card-body">
						<table id="productTable" class="table table-bordered">
							<thead>
								<tr>
									<th>ID</th>
									<th>Image</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var product in Model)
								{
									<tr>
										<td>@product.Id</td>
										<td><img src="@product.Image" width="100px" alt="Alternate Text" /></td>
										<td>
											<a href="@Url.Action("Delete","Product_imageAdmin", new{ id = product.Id})" id="deleteProduct" data-id="@product.Id" class="btn btn-danger delete-item">
												<i class="far fa-trash-alt"></i>Delete
											</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>