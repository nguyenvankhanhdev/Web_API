@model IEnumerable<AStore_Web.Models.Category>

<section class="section">
    <div class="section-header">
        <h1>Category</h1>
    </div>
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>All Cate</h4>
                        <div class="card-header-action">
                            <a href="@Url.Action("Create", "CategoryAdmin")" class="btn btn-primary"><i class="fas fa-plus"></i> Create New</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="productTable" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cate in Model)
                                {
                                    <tr>
                                        <td>@cate.Id</td>
                                        <td>@cate.Name</td>
                                        <td>
                                            <input type="checkbox" class="change-status" data-id="@cate.Id"
                                            @(cate.Status == 1 ? "checked" : "") />
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "CategoryAdmin", new { id = cate.Id })" class="btn btn-warning"><i class="far fa-edit"></i>Edit</a>
                                            <a href="@Url.Action("Delete", "CategoryAdmin", new { id = cate.Id })" class="btn btn-danger delete-item"><i class="far fa-trash-alt"></i>Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
